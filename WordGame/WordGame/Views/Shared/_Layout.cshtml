@{
    var userName = Context.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="tr" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WordGame</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Özel stil -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light text-dark d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm mb-4" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)">
        <div class="container-fluid px-4">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-graduation-cap"></i> WordGame
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                <ul class="navbar-nav gap-2">
                    <li class="nav-item ">
                        <a class="nav-link " asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Anasayfa</a>
                    </li>

                    @if (userName != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-book-open-reader"></i> Kelime İşlemleri
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Word" asp-action="Add"><i class="fa-solid fa-plus"></i> Kelime Ekle</a></li>
                                <li><a class="dropdown-item" asp-controller="Word" asp-action="List"><i class="fa-solid fa-list"></i> Kelime Listesi</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="Index"><i class="fa-solid fa-chart-line"></i> Analiz Raporu</a></li>
                                <li><a class="dropdown-item" asp-controller="Puzzle" asp-action="Index"><i class="fa-solid fa-puzzle-piece"></i> Bulmaca</a></li>
                                <li><a class="dropdown-item" asp-controller="Quiz" asp-action="Select"><i class="fa-solid fa-spell-check me-1"></i>Quiz</a></li>
                                <li><a class="dropdown-item" asp-controller="Settings" asp-action="Index"><i class="fa-solid fa-gear"></i> Ayarlar</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Auth" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap (@userName)</a>
                        </li>

                       
                      
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Kayıt Ol</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- BODY -->
    <main class="container flex-fill pb-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-5 text-white pt-5 pb-3" style="background: linear-gradient(135deg, #6a11cb, #2575fc); box-shadow: 0 -5px 20px rgba(0,0,0,0.1);">
        <div class="container ">
            <div class="d-flex g-4 text-center text-md-start">

                <!-- Column 1: Brand & About -->
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fa-solid fa-gamepad me-2"></i>WordGame
                    </h5>
                    <p class="small text-white-50 mb-0">
                        Oyunlaştırılmış İngilizce kelime ezber uygulaması. Quiz, bulmaca, görsel hafıza ve günlük tekrar ile kalıcı öğrenme sağlar.
                    </p>
                    <p class="small text-white-50 mt-3 mb-0">
                        <i class="fa-solid fa-lightbulb me-1"></i> Öğrenmek bir oyundur!
                    </p>
                    
                </div>

              


                <!-- Column 3: Contact & Social -->
                <div class="col-md-8 text-end">
                    <h6 class="fw-semibold mb-3">İletişim & Takip</h6>
                    <p class="small text-white-50 mb-2">
                        <i class="fa-solid fa-envelope me-2"></i> destek@wordgame.com
                    </p>
                    <div>
                        <a href="https://github.com/yunusemre04" target="_blank" class="text-white-50 fs-5 me-3"><i class="fab fa-github"></i></a>
                        <a href="https://www.linkedin.com/in/yunusemreacar/" target="_blank" class="text-white-50 fs-5 me-3"><i class="fab fa-linkedin"></i></a>
                        <a href="https://www.instagram.com/y_emre004/" target="_blank" class="text-white-50 fs-5"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-light my-4" />

            <div class="text-center small text-white-50">
                &copy; 2025 <strong>WordGame</strong> | Yunus Emre Acar tarafından yapıldı
            </div>
        </div>
    </footer>




    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
