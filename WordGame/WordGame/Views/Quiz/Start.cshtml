@using WordGame.Models.Entities;
@model List<Word>

<h2>Quiz</h2>

<form asp-action="Submit" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="border p-3 mb-3">
            <h4>@Model[i].EngWordName</h4>
            <p><strong>Türkçe Anlamı:</strong> @Model[i].TurWordName</p>

            <div>
                <label>Bu kelimeyi doğru bildiniz mi?</label><br />
                <input type="radio" name="Answers[@i].IsCorrect" value="true" required /> Evet
                <input type="radio" name="Answers[@i].IsCorrect" value="false" /> Hayır
                <input type="hidden" name="Answers[@i].WordId" value="@Model[i].WordId" />
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
