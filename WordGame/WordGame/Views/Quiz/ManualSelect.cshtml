@using WordGame.Models.Entities
@model List<Word>

@{
    ViewData["Title"] = "Kelimeleri Seç";
}

<h3 class="text-center mb-4">Quiz'e Dahil Edilecek Kelimeleri Seçin</h3>

<form asp-action="StartManualQuiz" asp-controller="Quiz" method="post" class="w-75 mx-auto">

    @foreach (var word in Model)
    {
        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" name="selectedWordIds" value="@word.WordId" id="word_@word.WordId" />
            <label class="form-check-label" for="word_@word.WordId">
                <strong>@word.EngWordName</strong> — @word.TurWordName
            </label>
        </div>
    }

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-circle-check me-1"></i> Seçilen Kelimelerle Quiz Başlat
        </button>
    </div>
</form>
