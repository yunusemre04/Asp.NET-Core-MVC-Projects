@{
    ViewData["Title"] = "Quiz Seçimi";
}

<style>
    .quiz-select-container {
        max-width: 500px;
        margin: 80px auto;
        padding: 40px;
        border-radius: 16px;
        background: linear-gradient(to right, #ffffff, #f0f4ff);
        box-shadow: 0 10px 30px rgba(0,0,0,0.07);
    }

        .quiz-select-container h3 {
            text-align: center;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 30px;
        }

    .btn-gradient {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 30px;
        padding: 12px 24px;
        font-size: 1.1rem;
        transition: all 0.2s ease-in-out;
    }

        .btn-gradient:hover {
            opacity: 0.95;
            transform: translateY(-1px);
        }

    .manual-btn {
        text-align: center;
        margin-top: 30px;
    }
</style>

<div class="quiz-select-container">
    <h3><i class="fa-solid fa-play me-2 text-primary"></i>Quiz Başlat</h3>

    <form asp-action="StartRandom" method="get">
        <div class="mb-3">
            <label class="form-label">Kaç kelimeyle quiz yapmak istersiniz?</label>
            <select class="form-select" name="count" required>
                <option value="5">5 Kelime</option>
                <option value="10">10 Kelime</option>
                <option value="15">15 Kelime</option>
            </select>
        </div>

        <button type="submit" class="btn btn-gradient w-100 mt-3">
            <i class="fa-solid fa-bolt me-1"></i> Hızlı Quiz Başlat
        </button>
    </form>

    <div class="manual-btn">
        <a asp-action="ManualSelect" class="btn btn-outline-dark w-100 mt-3">
            <i class="fa-solid fa-hand-pointer me-1"></i> Kelimeleri Kendim Seçmek İstiyorum
        </a>
    </div>
</div>
