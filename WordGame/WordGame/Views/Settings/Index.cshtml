@using WordGame.Models.ViewModels;
@model UserSettingsViewModel

<h2>Kullanıcı Ayarları</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="DailyWordLimit"></label>
        <input asp-for="DailyWordLimit" class="form-control" />
        <span asp-validation-for="DailyWordLimit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

