@using WordGame.Models.ViewModels;
@model List<PuzzleItemViewModel>

<h2>Bulmaca</h2>

<form asp-action="Submit" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="mb-3 border p-2">
            <strong>@Model[i].ScrambledWord</strong>

            <input name="userAnswers" class="form-control mt-1" placeholder="Tahmininiz" />

            <!-- doğru cevabı da gizli olarak gönder -->
            <input type="hidden" name="correctAnswers" value="@Model[i].CorrectAnswer" />
        </div>
    }

    <button type="submit" class="btn btn-success">Cevapları Gönder</button>
</form>


