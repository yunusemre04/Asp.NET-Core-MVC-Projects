@using WordGame.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<style>
    .register-card {
        max-width: 500px;
        margin: 60px auto;
        padding: 40px 30px;
        border-radius: 15px;
        background-color: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .register-icon {
        font-size: 40px;
        color: #6a11cb;
        margin-bottom: 10px;
    }

    .form-control:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
    }

    .btn-register {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        border: none;
        color: white;
        font-weight: 500;
    }

        .btn-register:hover {
            opacity: 0.95;
        }
</style>

<div class="register-card">

    <div class="text-center mb-4">
        <i class="fa-solid fa-user-plus register-icon"></i>
        <h3 class="fw-bold">Kayıt Ol</h3>
        <p class="text-muted small">Yeni hesap oluşturmak için bilgilerini doldur.</p>
    </div>

    <form asp-action="Register" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" required type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrarı</label>
            <input asp-for="ConfirmPassword" required type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-register w-100 py-2">
            <i class="fa-solid fa-user-check me-2"></i> Hesap Oluştur
        </button>
    </form>
</div>
