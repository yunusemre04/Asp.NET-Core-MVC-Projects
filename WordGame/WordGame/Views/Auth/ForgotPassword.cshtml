@using WordGame.Models.ViewModels
@model WordGame.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h2 class="mb-4 text-center">🔐 Şifremi Unuttum</h2>

<form asp-action="ForgotPassword" method="post" class="w-50 mx-auto">
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label">E-posta Adresiniz</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">📩 Yeni Şifre Gönder</button>
</form>

